[user]
    name = Miroslav Gajdos
    email = miroslav.gajdos@firma.seznam.cz
[push]
    default = simple
[status]
    showuntrackedfiles = no
[alias]
    st = status
    ap = add -p
    d = diff
    dc = diff --cached
    ds = diff --staged
    l = log --graph -n 25 --abbrev-commit --date=relative --pretty=format:'%C(auto)%h%d - %s %C(blue)<%an> %C(green)(%ar)'
    la = log --graph --all --abbrev-commit --date=relative --pretty=format:'%C(auto)%h%d - %s %C(blue)<%an> %C(green)(%ar)'
[color]
    ui = true
[core]
    excludesfile = ~/.gitignore
    editor = vim
    pager = less -FRSX
    autocrlf = input
